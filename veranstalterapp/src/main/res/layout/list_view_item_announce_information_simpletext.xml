<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_view_item_announce_information_simpletext_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff000000" />

    <EditText
        android:id="@+id/list_view_item_announce_information_simpletext_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLength="30"
        android:singleLine="true" />

    <Button
        android:id="@+id/list_view_item_announce_information_simpletext_deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"/>
</LinearLayout>