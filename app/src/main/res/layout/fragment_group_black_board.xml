<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ws1415.ps1415.fragment.GroupBlackBoardFragment">

    <ListView
        android:id="@+id/group_black_board_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/group_black_board_add_message_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_new"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        fab:fab_colorNormal="@color/colorPrimaryBlackBoard"
        fab:fab_colorPressed="@color/colorPressedBlackBoard"
        >
    </com.melnykov.fab.FloatingActionButton>
</RelativeLayout>
