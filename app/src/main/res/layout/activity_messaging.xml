<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ws1415.ps1415.activity.MessagingActivity">

    <ListView
        android:id="@+id/messaging_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/messaging_hint_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/messaging_hint"
            android:textColor="@color/colorHint"
            android:textSize="26sp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/messaging_hint_button"
            android:textStyle="bold"
            android:textSize="20sp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorHint"
            android:text="@string/search_for_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>
