<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="ws1415.ps1415.activity.MyUserGroupsActivity">

    <EditText
        android:visibility="gone"
        android:id="@+id/hidden_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/my_groups"
        android:text="@string/my_groups"
        android:textSize="16sp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/show_info_my_groups"
        android:layout_below="@+id/my_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info_about_visibility"/>

    <TextView
        android:layout_below="@+id/show_info_my_groups"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <ListView
        android:id="@+id/my_groups_list_view"
        android:layout_width="match_parent"
        android:layout_below="@+id/show_info_my_groups"
        android:paddingBottom="50dp"
        android:clipToPadding="false"
        android:layout_height="match_parent">

    </ListView>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/create_user_group_button_my_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_new"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPressed"
        >
    </com.melnykov.fab.FloatingActionButton>
</RelativeLayout>
